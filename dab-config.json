    "home": {
      "source": {
        "object": "dbo.homes",
        "type": "table"
      },
      "graphql": {
        "enabled": true,
        "type": {
          "singular": "home",
          "plural": "homes"
        }
      },
      "rest": {
        "enabled": true
      },
      "permissions": [
        {
          "role": "anonymous",
          "actions": [
            {
              "action": "*"
            }
          ]
        }
      ],
      "relationships": {
        "relationship-name": {
          "cardinality": "one",
          "target.entity": "person",
          "source.fields": ["homeLandlordId"],
          "target.fields": ["personId"]
        }
      }
    },
    "person": {
      "source": {
        "object": "dbo.persons",
        "type": "table"
      },
      "graphql": {
        "enabled": true,
        "type": {
          "singular": "person",
          "plural": "persons"
        }
      },
      "rest": {
        "enabled": true
      },
      "permissions": [
        {
          "role": "anonymous",
          "actions": [
            {
              "action": "*"
            }
          ]
        }
      ],
      "relationships": {
        "relationship-name": {
          "cardinality": "many",
          "target.entity": "home",
          "source.fields": ["personId"],
          "target.fields": ["homeLandlordId"]
        }
      }
    }
  }
}